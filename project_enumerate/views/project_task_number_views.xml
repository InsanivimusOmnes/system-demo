<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="task_number_view_task_tree2" model="ir.ui.view">
        <field name="name">Project.task.task_number</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="task_number" />
            </xpath>
        </field>
    </record>

    <record id="task_number_form_view" model="ir.ui.view">
        <field name="name">task_number.project.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="task_number" />
            </field>
        </field>
    </record>

    <record id="task_number_view_task_kanban" model="ir.ui.view">
        <field name="name">task_number.project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="display_name" />
            </field>
        </field>
    </record>

    <record id="task_number_view_search" model="ir.ui.view">
        <field name="name">Project.task.task_number_search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="filter_domain">
                    ["|", ("task_number", "ilike", self), ("name", "ilike", self)]
                </attribute>

            </xpath>
        </field>
    </record>

</odoo>
